thv = 'Nguyễn Văn A'
idhv = 7
th = 2
bt = 1
#Thay khoảng cách trong tên học viên bằng gạch dưới
ten_hoc_vien_khong_dau = thv.replace(" ", "_")
#Thay thế các biến trong dấu ngoặc nhọn bằng giá trị thực tế của chúng, tạo ra một chuỗi hoàn chỉnh là tên file
ten_file = f"{ten_hoc_vien_khong_dau}_{idhv}_tuan{th}_bai{bt}.py"
#Dùng print in ra kết quả
print(ten_file)

#Output: Nguyễn_Văn_A_7_tuan2_bai1.py
